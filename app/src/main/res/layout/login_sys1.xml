<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:background="@color/colorSoftWhite"
    android:maxWidth="1440dp">

    <EditText
        android:id="@+id/id_log_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingBottom="@dimen/LargeTextBoxPaddingBottom"
        android:paddingLeft="8dp"
        android:paddingTop="@dimen/LargeTextBoxPaddingTop"
        android:textColor="@color/colorButtonLogin"
        android:textColorHint="@color/colorLoginTextHint"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id_log_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:paddingBottom="@dimen/LargeTextBoxPaddingBottom"
        android:paddingLeft="8dp"
        android:paddingTop="@dimen/LargeTextBoxPaddingTop"
        android:textColor="@color/colorButtonLogin"
        android:textColorHint="@color/colorLoginTextHint"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/id_log_email"
        app:layout_constraintStart_toStartOf="@+id/id_log_email"
        app:layout_constraintTop_toBottomOf="@+id/id_log_email" />

    <TextView
        android:id="@+id/idForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/forgot_password"
        android:textColor="@color/colorLoginText"
        android:textSize="18sp"
        app:fontFamily="@font/arima_madurai"
        app:layout_constraintEnd_toEndOf="@+id/id_log_password"
        app:layout_constraintStart_toStartOf="@+id/id_log_password"
        app:layout_constraintTop_toBottomOf="@+id/id_log_password" />

    <TextView
        android:id="@+id/idTermsPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/Terms"
        android:textColor="@color/colorLoginText"
        android:textSize="16sp"
        app:fontFamily="@font/arima_madurai"
        app:layout_constraintEnd_toEndOf="@+id/idForgotPassword"
        app:layout_constraintStart_toStartOf="@+id/idForgotPassword"
        app:layout_constraintTop_toBottomOf="@+id/idForgotPassword" />

    <LinearLayout
        android:id="@+id/idLoginButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/colorButtonLogin"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constrainedWidth="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="LOG IN"
            android:textSize="24sp"
            app:fontFamily="@font/arima_madurai_extrabold" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>